{{#if isCreating}}
    <div class='container'>
        <div class='row'>
            <div class='col-lg-12'>
                {{textarea value=text class='form-control message-input' id='text' name='text' rows='3'}}
            </div>
        </div>
        <div class='row'>
            <div class='col-lg-11'>
                <button {{action 'save'}} {{bindAttr disabled='error'}} class='btn btn-primary btn-sm'>
                    Send
                </button>
                <button {{action 'cancel'}} class='btn btn-default btn-sm'>
                    Cancel
                </button>
            </div>
            <div class='col-lg-1'>
                <label>{{remainingText}}</label>
            <div>
        </div>
    </div>
{{else}}
    <div class='comment-create container'>
        <div class='row'>
            <div class='col-lg-12 btn-new-msg'>
                <button {{action 'new'}} class='btn btn-info btn-sm'>
                    Add Comment
                </button>
            </div>
        </div>
    </div>
{{/if}}
{{#each controller}}
    <div class='message col-lg-11 col-lg-offset-1'>
        <div class='row'>
            <div class='col-lg-4'>
                <span class='user'>{{user}}</span> {{rank}}
            </div>
            <div class='right'>
                {{format-date creationDate}}
            </div>
        </div>
        <div class='row'>
            <div class='col-lg-12'>
                {{text}}
            </div>
        </div>
    </div>
{{/each}}